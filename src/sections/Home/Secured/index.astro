---
import Heading from 'components:Heading/index';
import LazyLoadImage from 'components:LazyLoadImage/index';
import './styles.css';
---

<section class="secured">
  <div class="container">
    <div class="d-flex-column secured-info">
      <Heading size="sm" className="secured-heading">
        Your DogeCard is Secured by
      </Heading>
      <div class="d-flex text-center secured-content">
        <div class="d-flex secured-item">
          <LazyLoadImage
            className = "d-flex secured-icon"
            imageAlt = "FDIC"
            imageUrl={{
              mobile: 'assets/images/icons/secured-fdic.svg',
            }}
            imageWidth={{
              mobile: '106',
              tablet: '140'
            }}
          />
          <p class="d-flex secured-description">
            $250,000 FDIC insured Evolve Bank & Trust
          </p>
        </div>
        <div class="d-flex secured-item">
          <LazyLoadImage
            className = "d-flex secured-icon"
            imageAlt = "Authentication"
            imageUrl={{
              mobile: 'assets/images/icons/secured-authentication.svg',
            }}
            imageWidth={{
              mobile: '80',
              tablet: '100'
            }}
          />
          <p class="d-flex secured-description">
            Bank-grade encryption and authentication
          </p>
        </div>
        <div class="d-flex secured-item">
           <LazyLoadImage
            className = "d-flex secured-icon"
            imageAlt = "VISA"
            imageUrl={{
              mobile: 'assets/images/icons/secured-visa.svg',
            }}
            imageWidth={{
              mobile: '150',
              tablet: '193'
            }}
          />
          <p class="d-flex secured-description">
            Fraud Protection Zero-Liability guarantee
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
