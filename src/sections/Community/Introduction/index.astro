---
import Heading from 'components:Heading/index';
import LazyLoadImage from 'components:LazyLoadImage/index';

// Styles
import './styles.css';
---

<div class="community-introduction">
  <div class="community-image">
    <!-- <LazyLoadImage
      imageAlt="DogeCard community"
      imageUrl= {{
        mobile: "assets/images/community/mobile/introduction.webp",
        desktop: "assets/images/community/desktop/introduction.webp"
      }}
      imageWidth= {{
        mobile: "150",
        desktop: "440"
      }}
    /> -->
    <picture>
      <source
        media="(min-width: 1200px)"
        srcset="assets/images/community/desktop/introduction.webp"
        width="440"
        height="100%"
      />
      <img
        src="assets/images/community/mobile/introduction.webp"
        alt="DogeCard community"
        width="150"
        height="100%"
      />
    </picture>
  </div>
  <div class="community-content">
    <Heading size="md">Built for the Dogecoin community.</Heading>
    <p class="community-description">
      DogeCard is built for, and by the Doge community.
    </p>
  </div>
</div>
